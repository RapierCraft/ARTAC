# ARTAC Environment Configuration

# AI Services (Required)
# Claude Code CLI path (should be in PATH or provide full path)
CLAUDE_CODE_PATH=claude
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Database Configuration
DATABASE_URL=postgresql://artac_user:artac_password@localhost:5432/artac_db
REDIS_URL=redis://localhost:6379

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Agent Configuration
MAX_AGENTS=100
AGENT_TIMEOUT=300
DEFAULT_CLAUDE_MODEL=claude-4-sonnet
CLAUDE_HEADLESS_MODE=true

# RAG Configuration
VECTOR_DB_PATH=./vector_db
EMBEDDING_MODEL=text-embedding-3-large
MAX_CONTEXT_LENGTH=128000

# Voice Interface
STT_MODEL=whisper-1
TTS_VOICE=alloy
VOICE_TIMEOUT=30

# Git Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# External APIs
STACKOVERFLOW_API_KEY=your_stackoverflow_api_key_here
CVE_API_ENDPOINT=https://cve.circl.lu/api/

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000